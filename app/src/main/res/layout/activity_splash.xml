<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    tools:context="com.example.android.osloguide.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_10dp"
        android:contentDescription="@string/splash_screen_image"
        android:paddingBottom="@dimen/splash_image_paddingBottom"
        android:src="@drawable/oslo_guide_symbol" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_16dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textTitle" />

</RelativeLayout>
